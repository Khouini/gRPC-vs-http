            "options": {
                "cwd": "${workspaceFolder}/go"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Generate Go Proto Files"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
